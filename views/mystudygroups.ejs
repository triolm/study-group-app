      <div class="row row-cols-1 row-cols-md-2 g-4">
        <% for(i of rooms){ %>
          <div class="col">
            <div class="card text-black bg-white mb-3">
              <div class="card-header">
                <%= i.className %>
              </div>
              <div class="card-body">
                <h5 class="card-title">
                  Organizer: <%= i.author.username %>
                </h5>
                <p class="card-text">
                  <%= i.title %>
                </p>
              </div>
              <div class="card-footer text-black bg-white mb-3">
                <%= i.location %> @ <%= i.date %>
              </div>
            </div>
          </div>
