<% layout('/partials/boilerplate')%>

    <!doctype html>
    <html lang="en">

    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    </head>

    <body>
        <div class="row">
            <div class="card col-6 offset-3 my-4">
                <form action="/createrequest" method="POST" class="needs-validation " novalidate>
                    <div class="card-body">
                        <h2 class="card-title">Make a Study Group!</h2>
                        <p class="card-text">Fill out the form below to create a new study group.</p>
                        <div>
                            <label for="title" class="form-label"> What is the name of your group going to
                                be? </label>
                            <input type="text" class="form-control" name="title" style="color:black" ::
                                placeholder="Name of group" color:grey>
                        </div>
                        <div>
                            <label for="className" class="Nameform-label"> What class will you be studying for?
                            </label>
                            <input type="text" class="form-control" name="className" style="color:black" ::
                                placeholder="Course name" color:grey>
                        </div>
                        <div>
                            <label for="department" class="form-label"> What department is this class in?
                            </label>
                            <input type="text" class="form-control" name="department" style="color:black" ::
                                placeholder="Department" color:grey>
                        </div>
                        <div>
                            <label for="date" class="form-label"> What will be your meeting date? </label>
                            <input type="text" class="form-control" name="date" style="color:black" ::
                                placeholder="Meeting date" color:grey>
                        </div>
                        <div>
                            <label for="location" class="form-label"> Where will you be meeting? </label>
                            <input type="text" class="form-control" name="location" style="color:black" ::
                                placeholder="Meeting location" color:grey>
                        </div>
                        <div>
                            <label for="isVirtual" class="form-label"> What will be the format of your study
                                group? </label>
                            <li class="list-group-item">
                                <input type="checkbox" name="isVirtual"> Virtual<br>
                        </div>
                        <button class="btn btn-primary my-2 ">Submit</button>
                    </div>
                </form>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"></script>
    </body>

    </html>